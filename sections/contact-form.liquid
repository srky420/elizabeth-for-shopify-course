<div class="flex flex-col items-center my-8">

  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
  {% endif %}

  {% form 'contact' %}

    <!-- CONTACT FORM ERRORS -->
    {% if form.errors %}
      <div class="border p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Your message was not sent!
          </div>
        </div>
        <ul class="px-4 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>
                {% if error == 'form' %}
                  {{ form.errors.messages[error] }}
                {% else %}
                  {{ form.errors.translated_fields[error] }} - {{ form.errors.messages[error] }}
                {% endif %}
              </span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="text-sm font-medium ml-3">
          Your message was sent successfully!
        </div>
      </div>
    {% endif %}

    <!-- CONTACT FORM ELEMENTS -->
    <div class="max-w-6xl mx-auto flex-1 justify-center items-center px-4">

      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label for="contact_name" class="uppercase text-xs text-gray-500 font-medium">Name</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full focus:outline-none"
            type="text"
            name="contact[name]"
            id="contact_name">
        </div>
        <div class="px-3 md:w-1/2">
          <label for="contact_email" class="uppercase text-xs text-gray-500 font-medium">Email</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full focus:outline-none"
            type="email"
            name="contact[email]"
            id="contact_email">
        </div>
      </div>

      <div class="flex-1 px-1 mb-3">
        <div class="w-full px-3">
          <label for="contact_msg" class="uppercase text-xs text-gray-500 font-medium">Message</label>
          <textarea
            name="contact[body]"
            id="contact_msg"
            class="border py-3 px-4 mb-3 text-gray-700 w-full focus:outline-none"></textarea>
        </div>
      </div>

      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            type="submit"
            value="Submit Message"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700">
        </div>
      </div>
    </div>

  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}